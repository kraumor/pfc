{% block article %}
<h1>Todos tus viajes</h1>
 
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Usuario</th>
        </tr>
    </thead>
 
    <tbody>
        {% for viaje in viajes %}
        <tr>
{#
            <td>{{ viaje.revisada ? 'si' : 'no' }}</td>
 
            {% if viaje.revisada %}
            <td>{{ viaje.fechaPublicacion | localizeddate('medium', 'short') }}</td>
            <td>{{ viaje.fechaExpiracion  | localizeddate('medium', 'short') }}</td>
            {% else %}
            <td colspan="2">Pendiente de revisi√≥n</td>
            {% endif %}
#}
 
            <td title="{{ viaje.id }}">{{ loop.index }}</td>
            <td>{{ viaje.nombre }}</td>
            <td>{{ viaje.fecha | date('d/m/Y H:i:s') }}</td>
            <td>{{ viaje.usuario }}</td>

        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

