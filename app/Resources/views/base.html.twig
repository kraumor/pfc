<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="UTF-8" />
        <title>{% block title %}baseTitle{% endblock %} | PFC</title>
        {% block stylesheets %}{% endblock %}
        {% block rss %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('PFC_icons/1_Desktop_Icons/icon_016.png') }}" />
    </head>
    <body>
        <div id="contenedor">
            {% block body %}{% endblock %}
            <footer>
                &copy; {{ 'now'|date('Y') }}
                <a href="{{ path('portada')                                }}">portada</a>
                <a href="{{ path('inicio_prova'   , { 'name'  : 'adios' }) }}">{{ "proves"         | trans }}</a>
                <a href="{{ path('pagina_estatica', { 'pagina': 'sobre' }) }}">{{ "Sobre Nosotros" | trans }}</a>
                <a href="{{ path('contacto')                               }}">{{ "Contacto"       | trans }}</a>
                <a href="{{ path('usuario_login')                          }}">{{ "Login"          | trans }}</a>
                <a href="{{ path('usuario_perfil')                         }}">{{ "perfil"         | trans }}</a>
                <a href="{{ path('usuario_registro')                       }}">{{ "registro"       | trans }}</a>
                <a href="{{ path('usuario_logout')                         }}">{{ "Salir"          | trans }}</a>
                <a href="{{ path('pagina_estatica', { 'pagina': 'activar'})}}">{{ "activar"        | trans }}</a>
            </footer>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>